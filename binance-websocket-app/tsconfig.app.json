// tsconfig.app.json
{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // *** CERTIFIQUE-SE QUE ESTA LINHA NÃO CONTÉM 'jest' ou '@testing-library/jest-dom' ***
    // Pode ter "react-dom" ou outros tipos de ambiente de navegador, mas não os de teste.
    "types": ["node", "react-dom"] // Exemplo. Seus tipos aqui podem ser diferentes, mas NÃO deve ter "jest" ou "@testing-library/jest-dom"
  },
  "include": ["src"] // Certifique-se que inclui sua pasta src principal
}